<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- http://blog.iamsuleiman.com/bottom-navigation-bar-android-tutorial/ -->
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomNavigationBarView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:bb_activeTabColor="#f5f5f5"
        app:bb_inActiveTabColor="#bdbdbd"
        app:bb_tabXmlResource="@xml/menu_bottom_lingo_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>

