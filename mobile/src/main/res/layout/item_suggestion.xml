<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_component_lists_two_line_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/suggestionItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        style="@style/Widget.AppCompat.ActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search_black_24dp"
        tools:ignore="ContentDescription"/>
    
    <TextView
        android:id="@+id/suggestionItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textSize="@dimen/material_component_lists_two_line_text_size"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/suggestionItemDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/suggestionItemIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Definition of word"/>

    <TextView
        android:id="@+id/suggestionItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="top|start"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        app:layout_constraintWidth_percent="0.7"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/suggestionItemIcon"
        app:layout_constraintTop_toBottomOf="@id/suggestionItemText"
        tools:text="Description of word really long long, ish ish ish, maybe"/>
</androidx.constraintlayout.widget.ConstraintLayout>