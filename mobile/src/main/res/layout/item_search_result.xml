<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="searchResult"
            type="org.brainail.EverboxingLingo.model.SearchResultModel"/>
        <variable
            name="searchResultClickListener"
            type="org.brainail.EverboxingLingo.ui.home.explore.LingoSearchResultsAdapter.SearchResultClickListener"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> searchResultClickListener.onSearchResultClick(searchResult)}"
        app:cardCornerRadius="1dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:contentPadding="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/searchResultWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:maxLines="2"
                android:text="@{searchResult.word}"
                android:textSize="@dimen/material_typography_title"
                app:layout_constraintBottom_toTopOf="@id/searchResultDefinition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@tools:sample/first_names"/>

            <TextView
                android:id="@+id/searchResultDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="@{searchResult.definition}"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchResultWord"
                tools:text="@tools:sample/lorem/random"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>